            <name>Marca_Check_PBC</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>AND(     ISCHANGED(StageName)     ,OR(         ISPICKVAL(StageName, &apos;Reserva Pdte. Cobro&apos;),         ISPICKVAL(StageName, &apos;Reserva&apos;)     ),     NOT(Desactivar_Bloqueos_PBC__c) )</formula>
