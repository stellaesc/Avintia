    <rules>
        <fullName>Aviso 10 días antes de primera cuota</fullName>
        <active>true</active>
        <description>Contacte con el cliente para firmar contraro de compraventa</description>
        <formula>Contrato_Compraventa_firmado__c  = FALSE</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
