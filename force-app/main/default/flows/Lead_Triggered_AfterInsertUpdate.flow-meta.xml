            </connector>
            <label>España No</label>
        </rules>
        <rules>
            <name>PaisDistintoNuloEspanya_SiEspanya</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Pais__c</leftValueReference>
