    <decisions>
        <description>Comprobar si el País es distinto de España y que no sea nulo.</description>
        <name>Decision_PaisDistintoNuloEspanya</name>
        <label>Decision_Pais distinto a nulo y España?</label>
        <locationX>314</locationX>
        <locationY>1343</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>PaisDistintoNuloEspanya_Si</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Pais__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Pais__r.Name</leftValueReference>
